  color: #333
}
.information{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 20rpx;
  line-height: 20px
}
.normal_font{
  font-size: 14px;
  color:rgb(250, 157, 80)
}
.normal_font text{
  font-size: 14px;
  color: #333;
  /* color: rgb(255, 123, 123) */
}
.infor_half{
  width: 33%;
  margin-bottom: 10rpx
}
.infor_{
